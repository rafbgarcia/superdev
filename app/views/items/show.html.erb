<section class="container smaller">
  <section class="breadcrumbs">
    <%= link_to @course.name, course_path(@course) %>
    >
    <%= @lesson.name %>
  </section>

  <div class="box no-padding">
    <header>
      <div class="row">
        <div class="col-sm-8">
          <h5 class="title">
            <%= image_tag "question_type_#{format_item_type(@item.type)}.png" %>
            <%= @item.title %>
          </h5>
        </div>
        <div class="col-sm-4 text-right">
          <% if @item.has_previous_item? -%>
            <%= link_to course_item_path(item_weight: @item.previous_item.weight), class: 'question-link' do %>
              <%= image_tag 'previous.png' %>
              Anterior
            <% end %>
          <% else -%>
            <span class="question-link disabled">
              <%= image_tag 'previous.png' %>
              Anterior
            </span>
          <% end -%>

          <span>/</span>

          <% if @item.has_next_item? -%>
            <%= link_to course_item_path(item_weight: @item.next_item.weight), class: 'question-link' do %>
              Próximo
              <%= image_tag 'next.png' %>
            <% end %>
          <% else -%>
            <span class="question-link disabled">
              Próximo
              <%= image_tag 'next.png' %>
            </span>
          <% end -%>
        </div>
      </div>
    </header>


    <main>
      <p><%= simple_format @item.description %></p>

      <%= render format_item_type(@item.type) %>
    </main>
  </div>

  <%= render partial: 'discussions/index', locals: { item: @item }  %>
</section>
