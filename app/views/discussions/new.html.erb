<div class="container smallest">
  <div class="box bigger">
    <h3>Faça sua pergunta</h3>
    <br>
    <%= simple_form_for @discussion do |f| %>
      <%= f.input :title, label: 'Título' %>
      <%= f.input :text, label: 'Texto' %>
      <%= f.submit 'Postar', class: 'btn btn-primary' %>
      <%= link_to 'Voltar', course_item_path(@item.lesson.course, @item.lesson, @item) %>
    <% end %>
  </div>
</div>
