<% title(@current_post.title) %>
<% seo_description(@current_post.body) %>

<div class="container">
  <div class="box">
    <h1 class="text-center">
      <div>#DevQuestions</div>
      <small class="fz-1 text-muted">Você pergunta. Eu respondo. <u><strong>Todos aprendemos</strong></u>.</small>
    </h1>
    <div class="mt-3 text-center">
      <div>
        <%= link_to new_blog_post_path, class: 'btn btn-primary' do %>
          <%= icon 'heart' %> Contribua. Faça sua Pergunta
        <% end %>
      </div>
      <small class="text-gray">Sua dúvida pode ajudar muitas pessoas <%= icon 'thumbs-up' %></small>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
      <div class="box no-padding post-list">
        <% @blog_posts.each do |blog_post| -%>
          <%= link_to blog_post_path(blog_post), class: "post #{'active' if params[:id] == blog_post.slug}" do %>
            <div><%= blog_post.title %></div>
            <% if blog_post.asked_by.present? %>
              <div class="mt-2">
                <small>Por <%= blog_post.asked_by.name %></small>
              </div>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>


    <div class="col-sm-8 active-post">
      <% if @current_post.pending_approval? %>
        <div class="alert alert-info">
          * Seu post vai aparecer assim que for respondido :)
        </div>
        <% if user_signed_in? %>
          <p>Vou te avisar no e-mail <u><strong><%= current_user.email %></strong></u></p>
        <% end %>
      <% else %>
        <div class="box d-flex justify-content-between">
          <aside class="text-center">
            <div class="avatar"><%= image_tag 'rafa.png' %></div>
            <small>Rafa Garcia</small>
          </aside>
          <article class="content">
            <%= render_md @current_post.body %>
          </article>
        </div>
      <% end %>

    </div>

  </div>
</div>
