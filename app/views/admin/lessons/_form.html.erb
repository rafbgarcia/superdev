<% action = @lesson.new_record? ? admin_course_lessons_path : admin_course_lesson_path(@course, @lesson) %>

<%= simple_form_for @lesson, url: action do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :course, include_blank: false, disabled: true %>
    <%= f.input :name %>
    <%= f.input :free %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to 'Back to Listing', admin_course_lessons_path %>
