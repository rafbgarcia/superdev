<h1>Listing Lesson</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Curso</th>
      <th>Nome</th>
      <th>Free</th>
      <th width="10%"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= lesson.course %></td>
        <td>
          <div class="d-flex">
            <%= simple_form_for lesson, url: admin_lesson_update_weight_path(lesson) do |f| %>
              <input type="hidden" name="lesson[weight]" value="<%= lesson.weight-1 %>">
              <button class="btn btn-sm btn-default">-1</button>
            <% end %>
            &nbsp;
            <%= simple_form_for lesson, url: admin_lesson_update_weight_path(lesson) do |f| %>
              <input type="hidden" name="lesson[weight]" value="<%= lesson.weight+1 %>">
              <button class="btn btn-sm btn-default">+1</button>
            <% end %>
            &nbsp;
            <%= lesson.weight %> - <%= lesson.name %>
          </div>
        </td>
        <td><%= lesson.free %></td>
        <td>
          <%= link_to 'Edit', edit_admin_lesson_path(lesson) %>
          |
          <%= link_to 'Delete', admin_lesson_path(lesson), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New lesson', new_admin_lesson_path %>
