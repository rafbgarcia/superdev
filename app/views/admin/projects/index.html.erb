<h5 class="mb-4">Projetos</h5>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th width="10%">Imagem</th>
      <th width="25%">Nome</th>
      <th width="30%">Descrição</th>
      <th width="10%"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= image_tag project.image %></td>
        <td>
          <%= project.weight %> - <%= project.name %>
          <br><br>
          <small class="text-muted"><%= project.courses.count %> cursos</small>
        </td>
        <td><%= project.description %></td>
        <td>
          <%= link_to 'Edit', edit_admin_project_path(project) %>
          |
          <%= link_to 'Delete', admin_project_path(project), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_admin_project_path %>
