<% action = @project.new_record? ? admin_projects_path : admin_project_path(@project) %>

<%= simple_form_for @project, url: action do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :weight %>
    <%= f.input :image %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to 'Back to Listing', admin_projects_path %>
