<div class="container smallest">
  <div class="box bigger">
    <h2 style="font-weight: 300"">Esqueceu sua senha?</h2>
    <p class="text-muted mb-5">Digite seu e-mail abaixo para receber instruções de como criar uma nova senha</p>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Receber instruções", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
